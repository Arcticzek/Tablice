#include <iostream>
#include <string>

using namespace std;

int main()
{
    string ini = "String", spr, kopia, dod;
    int i;
    cout << "Podaj stringa :\n";
    getline(cin, spr);
    kopia += spr;
    dod = ini + dod.append(spr);
    i = dod.length();
    cout << "Wynik:\n";
    cout << "Zainicjowane: " << ini << endl;
    cout << "Odczytano: " << spr << endl;
    cout << "Skopiowane z odczytu: " << kopia << endl;
    cout << "Dolaczone: " << dod << endl;
    cout << "DÅ‚ugosc dolaczonego stringa: " << i; 
    return 0;
}
